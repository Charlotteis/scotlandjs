@import "_variables"

#venue
  position: relative

  .venue-content
    @include span-columns(6)

    @include media($mobile)
      @include span-columns(4)

  address
    color: lighten($text-color, 15%)
    line-height: 1.5
    font-family: $font-alt
    font-size: em(20)
    font-style: normal
    margin-bottom: $margin*2
    text-align: center

#map
  @include span-columns(12)
  @include position(absolute, 0px 0px 0px 0)
  background: url(<%= asset_path 'dynamic_earth.jpg' %>) center no-repeat
  background-size: cover
  margin-right: 0
  width: 50%

  @include media($mobile)
    display: none
