@import "_variables"

.schedule
  margin-left: 10%
  margin: $gutter*2 0 $gutter*3 10%
  width: 80%

  @include media($tablet)
    margin-left: 0
    padding: 0 $gutter
    width: 100%

  thead th, tfoot tr td
    background-color: $primary
    color: #FFF
    text-align: left

  thead th
    font-size: em(24)

    &:first-child
      width: 20%

    &:nth-child(2), &:last-child
      width: 40%

  tfoot td:first-child
    font-family: $font-alt
    text-align: center

  tr

    .time
      font-family: $font-alt
      text-align: center
      vertical-align: middle
    td
      background-color: #F5F5F5
      padding: $gutter/2 0
      padding-right: $gutter/2
      vertical-align: top


      &:first-child
        font-family: $font-alt
        text-align: center
        vertical-align: middle

      .speaker-info
        @include clearfix

        img
          float: left
          margin-right: $gutter
          width: 60px

          @include media($mobile)
            display: none

        h4
          font-weight: normal
          line-height: 1em
          margin: 0

        em
          color: $primary-text
          display: block
          font-size: em(12)

      p
        color: $primary-text
        font-family: $font-alt
        margin-bottom: 0
        margin-top: $gutter/2

    &:nth-child(even) td
      background-color: #FDFDFD

    &.break td
      background-color: $tagline
      border:
        bottom: 1px solid darken($tagline, 5%)
        top: 1px solid darken($tagline, 5%)
