@import "_variables"

.sponsors
  @include clearfix
  margin: $margin*2 0 $margin 0
  padding: 0

  &.headline
    li:first-child
      @include shift(3)

      @include media($tablet)
        @include shift(0)

  li
    @include span-columns(3)
    @include omega(4n)
    margin-bottom: $margin
    text-align: center
    vertical-align: middle

    a
      display: block
      background-position: center
      background-repeat: no-repeat
      background-size: 90%
      height: 120px

    @include media($tablet)
      @include span-columns(3)
      @include omega(2n)
    @include media($mobile)
      @include span-columns(3)
      @include omega(1n)