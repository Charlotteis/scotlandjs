@import "_variables"

article
  @include span-columns(8)
  @include shift(2)
  margin-bottom: $margin*3

  @include media($mobile)
    @include span-columns(4)
    @include shift(0)
    padding:
      left: $gutter
      right: $gutter

  header h1
    line-height: 1
    margin: 0

  time
    color: lighten($text-color, 15%)
    font-family: $font-alt

#post
  padding-top: $margin*3
